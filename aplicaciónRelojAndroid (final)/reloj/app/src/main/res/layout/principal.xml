<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
android:gravity="center"
android:background="#000">

<ImageView
    android:src="@drawable/teclado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="210dp"
    android:layout_weight="1"
    android:scaleType="centerCrop" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Seleccione segÃºn corresponda"
    android:id="@+id/titulo_text"
    android:textSize="25sp"
    android:textColor="#ffff777e"
    android:paddingLeft="30dp"
    android:paddingRight="0dp"
    android:layout_marginTop="56dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"/>

<Button
    style="?android:attr/buttonStyleSmall"
    android:id="@+id/btn_reloj"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="Ver Reloj"
    android:background="#004D40"
    android:textColor="#FFFFFF"
    android:layout_marginTop="80dp"
    android:textSize="16sp"
    android:layout_below="@+id/titulo_text"
    android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/btn_cambio"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Ver Cambio Imagen"
        android:background="#004D40"
        android:textColor="#FFFFFF"
        android:layout_marginTop="50dp"
        android:textSize="16sp"
        android:layout_below="@+id/btn_reloj"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
